---
import bannerImg from "@/images/banner_light.png";
import Footer from "@/components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/assets/capy.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Dookie Server</title>

    <style>
      @font-face {
        font-family: "Minecraft";
        src: url("../font/Minecraft.eot");
        src:
          url("../font/Minecraft.eot?#iefix") format("embedded-opentype"),
          url("../font/Minecraft.woff2") format("woff2"),
          url("../font/Minecraft.woff") format("woff"),
          url("../font/Minecraft.ttf") format("truetype"),
          url("../font/Minecraft.svg#Minecraft") format("svg");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

	  body {
		height: 100vh;
		overflow: hidden;
	  }

      .pano-bg-container {
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100%;
        width: 100%;
        z-index: -2;
      }

      .centered-container {
        width: 100%;
        height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .centered-container img {
        width: 100%;
        height: auto;
      }

      .banner-container {
        position: relative;
        margin: auto;
        width: 60%;
        height: auto;
      }

      .text {
        position: absolute;
        bottom: 11.5cqw;
        right: 5cqw;
        font-family: "Minecraft", sans-serif;
        font-size: 2cqw;
        color: yellow;
        animation: growShrink 1s infinite;
        transform: translateX(50%) rotate(-25deg);
      }

      @keyframes growShrink {
        0%,
        100% {
          font-size: 2cqw;
        }
        50% {
          font-size: 2.2cqw;
        }
      }
    </style>
  </head>
  <body>
    <section>
      <div class="pano-bg-container"></div>

      <div class="centered-container">
        <div class="banner-container">
          <img src={bannerImg.src} alt="Background Image" />
          <div class="text">Server is up!</div>
        </div>
      </div>
	  <Footer/>
    </section>
	

    <script>
      import "@js/three.min.js";
      import "@js/panolens.min.js";
      import "@js/main.js";
    </script>
  </body>
</html>
